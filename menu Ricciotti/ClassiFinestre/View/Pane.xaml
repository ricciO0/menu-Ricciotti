<UserControl x:Class="menu_Ricciotti.ClassiFinestre.View.Pane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:menu_Ricciotti.ClassiFinestre.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <TextBox Text="SCEGLI  IL  TIPO  DI  PANE" HorizontalAlignment="Center" Style="{StaticResource OldTextBox}" Background="Tan" Margin="0,40,0,358"  FontFamily="Dungeon" FontWeight="Normal"/>
        <Grid Margin="186,145,186,92">

            <RadioButton x:Name="tipo1" Foreground="White" Content="CIABATTA" Style="{StaticResource Scelte}" Margin="0,0,232,128" Checked="tipo1_Checked" />
            <RadioButton x:Name="tipo2" Foreground="White" Content="DI SEGALE" Style="{StaticResource Scelte}" Margin="232,0,0,128" Checked="tipo2_Checked" />
            <RadioButton x:Name="tipo3" Foreground="White" Content="TURCO" Style="{StaticResource Scelte}" Margin="0,128,232,0" Checked="tipo3_Checked" />
            <RadioButton x:Name="tipo4" Foreground="White" Content="CLASSIC" Style="{StaticResource Scelte}" Margin="232,128,0,0" Checked="tipo4_Checked" />


        </Grid>


    </Grid>
</UserControl>
